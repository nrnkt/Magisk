<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.topjohnwu.magisk.ui.settings.BaseSettingsItem" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/l1_25"
        android:layout_marginEnd="@dimen/l1_25"
        android:layout_marginTop="@dimen/l1_50"
        android:layout_marginBottom="4dp">

        <com.google.android.material.textview.MaterialTextView
            gone="@{item.title.empty}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="?colorPrimary"
            tools:text="@tools:sample/lorem" />

        <com.google.android.material.textview.MaterialTextView
            gone="@{item.description.empty}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.description}"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            tools:text="@tools:sample/lorem/random" />

    </LinearLayout>

</layout>
