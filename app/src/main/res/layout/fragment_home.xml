<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.topjohnwu.magisk.core.Info" />

        <import type="com.topjohnwu.magisk.ui.home.DeveloperItem" />

        <import type="com.topjohnwu.magisk.ui.home.IconLink" />

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.home.HomeViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingTop="@dimen/internal_action_bar_size"
        android:paddingBottom="@dimen/l3"
        app:fitsSystemWindowsInsets="top|bottom"
        tools:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/l1_25"
            android:clipToPadding="false"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                style="@style/WidgetR.CardView.Elevated.NoShadow"
                goneUnless="@{viewModel.noticeVisible}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/l1_25"
                android:focusable="false"
                app:cardElevation="@dimen/l1"
                android:outlineProvider="none">

                <LinearLayout
                    goneUnless="@{viewModel.noticeVisible}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/l1_25"
                    android:focusable="false">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/home_notice_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/l1_25"
                        android:text="@string/home_notice_content"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="?colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/WidgetR.Button.IconButton.Outlined"
                        android:id="@+id/home_notice_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.hideNotice()}"
                        android:contentDescription="@string/hide"
                        app:icon="@drawable/ic_close" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <include
                layout="@layout/include_home_magisk"
                viewModel="@{viewModel}"
                android:id="@+id/home_magisk_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/l1_25"/>

            <com.google.android.material.card.MaterialCardView
                style="@style/WidgetR.CardView.Elevated.NoShadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="false">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/l1_25"
                        android:layout_marginEnd="@dimen/l1_25"
                        android:layout_marginTop="@dimen/l1_25"
                        android:layout_marginBottom="@dimen/l1"
                        android:text="@string/home_follow_and_support_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textSize="20sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/l1_25"
                        android:layout_marginEnd="@dimen/l1_25"
                        android:text="@string/home_support_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:textColorSecondary" />

                    <View
                        android:background="?colorSurface"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/l1"
                        android:layout_marginBottom="@dimen/l_50"/>

                    <include
                        item="@{DeveloperItem.John.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Vvb.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.YU.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Rikka.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.MaruAuthor.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Husky.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Dng.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Hcat.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        item="@{DeveloperItem.Onur.INSTANCE}"
                        layout="@layout/item_developer"
                        viewModel="@{viewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/l_50"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
